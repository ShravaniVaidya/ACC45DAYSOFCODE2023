#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t,n,x;
	cin>>t;
	while(t--)
	{
	    cin>>n>>x;
	    if( x == 0 || x==n)
	    {
	        cout<<0<<endl;
	    }
	    else
	    {
	        if(n/2 >= x)
	        {
	            cout<<x<<endl;
	        }
	        else
	        {
	            cout<<n-x<<endl;
	        }
	    }
	}
	return 0;
}
